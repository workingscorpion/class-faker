{
  "compilerOptions": {
    "module": "ES2015",
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "target": "ES5",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["lib/*"],
      "@test/*": ["test/*"]
    },
    "strictNullChecks": true,
    "esModuleInterop": true,
    "strictBindCallApply": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "lib/common/types"],
    "rootDir": "."
  },
  "exclude": ["**/*.spec.ts", "jest.config.js", "test", "dist", "examples"]
}
